{% extends 'base.html.twig' %}
{% block body %}
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Register</h1>
      {% if error %}
        <div class="alert alert-danger alert-dismissible">
          {{ error }}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      {% endif %}
      {{ form(form) }}
    </div>
  </div>
{% endblock %}